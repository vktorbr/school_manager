{% extends "layout.njk" %}

{% block content %}
<form class="card" method="post" action="/teachers">
    <section class="image" style="background: url(https://source.unsplash.com/collection/1361815/800x800) no-repeat center center / cover">
    </section>
    <section class="details">
        <h3>Novo Professor</h3>
        <div class="item">
            <div>Avatar URL</div>
            <div>
                <input type="url" name="avatar_url" placeholder="http://">
            </div>
        </div>
        <div class="item">
            <div>Professor</div>
            <div>
                <input type="text" name="name" placeholder="Nome Completo">
            </div>
        </div>
        <div class="item">
            <div>Data de Nascimento</div>
            <div>
                <input type="date" name="birth">
            </div>
        </div>
        <div class="item">
            <div>Grau de escolaridade</div>
            <div>
                <select name="education_level">
                    <option value="1">Ensino Médio Completo</option>
                    <option value="2">Ensino Superior Completo</option>
                    <option value="3">Mestrado</option>
                    <option value="4">Doutorado</option>
                </select>
            </div>
        </div>
        <div class="item">
            <div>Tipo de aula</div>
            <div>
                <span><input type="radio" name="class_type" value="in_person" checked>Presencial</span>
                <span><input type="radio" name="class_type" value="distance">À distância</span>
            </div>
        </div>
        <div class="item">
            <div>Área de Atuação</div>
            <div>
                <input type="text" name="occupations" placeholder="Separar as ocupações por vírgula">
            </div>
        </div>
        <button type="submit">Salvar</button>
    </section>
</form>
{% endblock content %}