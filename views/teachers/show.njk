{% extends "layout.njk" %}

{% block content %}
<div class="card">
    <section class="image" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover">
    </section>
    <section class="details">
        <h3>Detalhes</h3>
        <div class="item">
            <div>Nome Completo</div>
            <div>{{teacher.name}}</div>
        </div>
        <div class="item">
            <div>Idade</div>
            <div>{{teacher.age}} anos</div>
        </div>
        <div class="item">
            <div>Grau de escolaridade</div>
            <div>{{teacher.education_level}}</div>
        </div>
        <div class="item">
            <div>Tipo de aula</div>
            <div>{{"Presencial" if teacher.class_type == "in_person" else "À distância"}}</div>
        </div>
        <div class="item">
            <div>Acompanhamento</div>
            <div>
                {% for occupation in teacher.occupations %}
                <span>{{occupation}}</span>
                {% endfor %}   
            </div>
        </div>
        <div class="item">
            <div>Desde</div>
            <div>{{teacher.created_at}}</div>
        </div>
        <a href="/teachers/{{ teacher.id }}/edit" class="button">Editar</a>
    </section>
</div>
{% endblock content %}